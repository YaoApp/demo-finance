{
  "name": "公司",
  "action": {
    "bind": {
      "model": "company",
      "option": {
        "withs": {}
      }
    }
  },
  "layout": {
    "primary": "id",
    "header": {
      "preset": {},
      "actions": []
    },
    "filter": {
      "columns": [
        {
          "name": "单位名称",
          "width": 4
        }
      ],
      "actions": [
        {
          "icon": "icon-plus",
          "width": 3,
          "action": {
            "Common.openModal": {
              "width": 640,
              "Form": {
                "type": "edit",
                "model": "company"
              }
            }
          },
          "title": "添加"
        }
      ]
    },
    "table": {
      "columns": [
        {
          "name": "单位名称"
        },
        {
          "name": "单位分类"
        },
        {
          "name": "类型"
        },
        {
          "name": "负责人名字"
        },
        {
          "name": "负责人联系电话"
        }
      ],
      "operation": {
        "fold": false,
        "actions": [
          {
            "action": {
              "Common.openModal": {
                "width": 640,
                "Form": {
                  "type": "view",
                  "model": "company"
                }
              }
            },
            "title": "查看",
            "icon": "icon-eye"
          },
          {
            "title": "编辑",
            "icon": "icon-edit-2",
            "action": {
              "Common.openModal": {
                "Form": {
                  "type": "edit",
                  "model": "company"
                }
              }
            }
          },
          {
            "icon": "icon-trash-2",
            "action": {
              "Table.delete": {}
            },
            "style": "danger",
            "confirm": {
              "title": "提示",
              "desc": "确认删除，删除后数据无法恢复？"
            },
            "title": "删除"
          }
        ]
      }
    }
  },
  "fields": {
    "filter": {
      "单位名称": {
        "bind": "where.name.match",
        "edit": {
          "type": "Input",
          "compute": "Trim",
          "props": {
            "placeholder": "单位名称"
          }
        }
      }
    },
    "table": {
      "单位名称": {
        "view": {
          "props": {},
          "type": "Text"
        },
        "edit": {
          "type": "Input",
          "bind": "name",
          "props": {}
        },
        "bind": "name"
      },

      "负责人名字": {
        "bind": "user_name",
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "props": {},
          "type": "Input",
          "bind": "user_name"
        }
      },
      "负责人联系电话": {
        "bind": "mobile",
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "props": {},
          "type": "Input",
          "bind": "mobile"
        }
      },
      "单位分类": {
        "edit": {
          "bind": "kind",
          "props": {
            "options": [
              {
                "labe": "::建设单位",
                "value": "建设单位"
              },
              {
                "labe": "::总包单位",
                "value": "总包单位"
              },
              {
                "labe": "::劳务公司",
                "value": "劳务公司"
              },
              {
                "labe": "::总包单位",
                "value": "总包单位"
              },
              {
                "labe": "::工程公司",
                "value": "工程公司"
              },
              {
                "labe": "::建材公司",
                "value": "建材公司"
              },
              {
                "labe": "::专业分包",
                "value": "专业分包"
              }
            ],
            "placeholder": "请选择"
          },
          "type": "Select"
        },
        "bind": "kind",
        "view": {
          "type": "Text",
          "props": {}
        }
      },

      "类型": {
        "edit": {
          "bind": "type",
          "props": {
            "options": [
              {
                "labe": "::内部",
                "value": "内部"
              },
              {
                "labe": "::外部",
                "value": "外部"
              }
            ],
            "placeholder": "请选择"
          },
          "type": "Select"
        },
        "bind": "type",
        "view": {
          "type": "Text",
          "props": {}
        }
      }
    }
  }
}
