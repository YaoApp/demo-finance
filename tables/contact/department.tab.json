{
  "name": "部门",
  "action": {
    "bind": {
      "model": "contact.department",
      "option": {
        "withs": { "parent": {} }
      }
    },
    "search": {
      "guard": "-",
      "process": "scripts.contact.department.Department",
      "default": [null, 1, 2]
    }
  },
  "layout": {
    "primary": "id",
    "header": {
      "preset": {},
      "actions": []
    },
    "filter": {
      "columns": [
        {
          "name": "部门名称",
          "width": 4
        }
      ],
      "actions": [
        {
          "icon": "icon-plus",
          "width": 3,
          "action": {
            "Common.openModal": {
              "width": 640,
              "Form": {
                "type": "edit",
                "model": "contact.department"
              }
            }
          },
          "title": "添加"
        }
      ]
    },
    "table": {
      "columns": [
        {
          "width": 200,
          "name": "部门名称"
        },
        {
          "name": "排序",
          "width": 250
        },
        {
          "name": "上级部门",
          "width": 250
        }
      ],
      "operation": {
        "fold": false,
        "actions": [
          {
            "action": {
              "Common.openModal": {
                "width": 640,
                "Form": {
                  "type": "view",
                  "model": "contact.department"
                }
              }
            },
            "title": "查看",
            "icon": "icon-eye"
          },
          {
            "title": "编辑",
            "icon": "icon-edit-2",
            "action": {
              "Common.openModal": {
                "Form": {
                  "type": "edit",
                  "model": "contact.department"
                }
              }
            }
          },
          {
            "icon": "icon-trash-2",
            "action": {
              "Table.delete": {}
            },
            "style": "danger",
            "confirm": {
              "title": "提示",
              "desc": "确认删除，删除后数据无法恢复？"
            },
            "title": "删除"
          }
        ]
      }
    }
  },
  "fields": {
    "filter": {
      "部门名称": {
        "bind": "where.name.match",
        "edit": {
          "type": "Input",
          "compute": "Trim",
          "props": {
            "placeholder": "请输入名称搜索"
          }
        }
      }
    },
    "table": {
      "部门名称": {
        "view": {
          "props": {},
          "type": "Text"
        },
        "edit": {
          "type": "Input",
          "bind": "name",
          "props": {}
        },
        "bind": "name"
      },
      "排序": {
        "bind": "order",
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "props": {
            "type": "number"
          },
          "type": "Input",
          "bind": "order"
        }
      },
      "上级部门": {
        "edit": {
          "props": {
            "xProps": {
              "$remote": {
                "process": "scripts.contact.department.GetSelect",
                "query": { "id": ":id" }
              }
            }
          },
          "type": "Select"
        },
        "bind": "parent_name",
        "view": {
          "props": {},
          "type": "Text"
        }
      }
    }
  }
}
