{
  "action": {
    "bind": {
      "model": "contact.user",
      "option": {
        "withs": { "departments": {} }
      }
    },
    "before:save": "scripts.contact.user.BeforeSave",
    "after:find": "scripts.contact.user.AfterFind"
  },
  "layout": {
    "form": {
      "sections": [
        {
          "columns": [
            {
              "width": 12,
              "name": "姓名"
            },
            {
              "width": 12,
              "name": "英文名"
            },
            {
              "name": "工号",
              "width": 12
            },
            {
              "name": "所属部门",
              "width": 12
            },
            {
              "name": "电子邮箱",
              "width": 12
            },
            {
              "name": "电话号码",
              "width": 12
            },
            {
              "name": "登录密码",
              "width": 12
            },
            {
              "name": "职位",
              "width": 12
            },
            {
              "name": "工作地点",
              "width": 12
            },
            {
              "width": 12,
              "name": "状态"
            },
            {
              "width": 24,
              "name": "头像"
            }
          ]
        }
      ],
      "props": {}
    },
    "primary": "id",
    "operation": {
      "preset": {
        "save": {
          "back": true
        },
        "back": {}
      },
      "actions": [
        {
          "confirm": {
            "title": "提示",
            "desc": "确认删除，删除后数据无法恢复？"
          },
          "title": "删除",
          "icon": "icon-trash-2",
          "action": {
            "Form.delete": {
              "pathname": "/x/Table/contact.user"
            }
          },
          "style": "danger"
        }
      ]
    }
  },
  "fields": {
    "form": {
      "姓名": {
        "edit": {
          "type": "Input",
          "bind": "name",
          "props": {}
        },
        "bind": "name"
      },
      "英文名": {
        "edit": {
          "type": "Input",
          "bind": "en_name",
          "props": {}
        },
        "bind": "en_name"
      },
      "工号": {
        "bind": "job_number",
        "edit": {
          "props": {},
          "type": "Input",
          "bind": "job_number"
        }
      },
      "所属部门": {
        "edit": {
          "props": {
            "xProps": {
              "$remote": {
                "process": "scripts.contact.department.GetSelect",
                "query": {}
              }
            }
          },
          "type": "Select"
        },
        "bind": "department_id"
      },
      "电子邮箱": {
        "edit": {
          "bind": "email",
          "props": {},
          "type": "Input"
        },
        "bind": "email"
      },
      "电话号码": {
        "edit": {
          "props": {},
          "type": "Input",
          "bind": "mobile"
        },
        "bind": "mobile"
      },
      "登录密码": {
        "edit": {
          "props": {
            "type": "password"
          },
          "type": "Input",
          "bind": "password"
        },
        "bind": "password"
      },
      "职位": {
        "edit": {
          "props": {},
          "type": "Input",
          "bind": "position"
        },
        "bind": "position"
      },
      "工作地点": {
        "edit": {
          "props": {},
          "type": "Input",
          "bind": "work_place"
        },
        "bind": "work_place"
      },
      "头像": {
        "edit": {
          "type": "Upload",
          "props": {
            "$api": { "process": "fs.system.Upload" },
            "filetype": "image"
          }
        },
        "is_image": true,
        "bind": "avatar"
      },

      "状态": {
        "edit": {
          "bind": "status",
          "props": {
            "options": [
              {
                "labe": "::启用",
                "value": "启用"
              },
              {
                "labe": "::停用",
                "value": "停用"
              }
            ],
            "placeholder": "请选择"
          },
          "type": "Select"
        },
        "bind": "status"
      }
    }
  },
  "name": "用户"
}
